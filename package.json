{
   "name": "ts-template",
   "version": "1.0.0",
   "description": "A simple TypeScript template for Node.js projects",
   "type": "module",
   "repository": {
      "type": "git",
      "url": "https://github.com/tiffan-source/my-ts-startup.git"
   },
   "main": "index.js",
   "scripts": {
      "lint": "npx eslint .",
      "lint:fix": "npx eslint . --fix",
      "format": "npx prettier --write .",
      "format:check": "npx prettier --check .",
      "test": "npx jest",
      "test:watch": "npx jest --watch",
      "test:coverage": "npx jest --coverage",
      "test:debug": "npx jest --runInBand --detectOpenHandles --forceExit",
      "prepare": "husky"
   },
   "keywords": [
      "typescript",
      "node",
      "template",
      "starter"
   ],
   "author": "blackgenius",
   "license": "ISC",
   "devDependencies": {
      "@commitlint/cli": "^19.8.1",
      "@commitlint/config-conventional": "^19.8.1",
      "@eslint/js": "^9.28.0",
      "@types/jest": "^29.5.14",
      "eslint": "^9.28.0",
      "eslint-config-prettier": "^10.1.5",
      "husky": "^9.1.7",
      "jest": "^29.0.0",
      "lint-staged": "^15.5.2",
      "prettier": "3.5.3",
      "ts-jest": "^29.3.4",
      "typescript": "^5.8.3",
      "typescript-eslint": "^8.34.0"
   },
   "lint-staged": {
      "**/*.ts": [
         "npm run format",
         "npm run lint:fix",
         "npm run test"
      ]
   }
}
